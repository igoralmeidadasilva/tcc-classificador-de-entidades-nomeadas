@{
    ViewData["Title"] = "Contatos";
    var nameFailures = TempData["ContactNameFailures"] as IReadOnlyList<string>;
    var emailFailures = TempData["EmailForContactFailures"] as IReadOnlyList<string>;
    var subjectFailures = TempData["MessageSubjectFailures"] as IReadOnlyList<string>;
    var messageFailures = TempData["MessageBodyFailures"] as IReadOnlyList<string>;
}

<div class="container my-5">
    <div class="mb-4">
        <h1 class="display-6 text-color-success">Contato</h1>
        <h2 class="display-4">
            Estamos aqui para ajudar!
        </h2>
    </div>   

    <hr>

    <div class="mb-4">
        <h3 class="display-6">A equipe <span class="text-color-success">MedTagger</span> agradece o contato.</h3>
        <p class="lead">
            Se você tiver alguma dúvida, sugestão ou precisar de assistência, sinta-se à vontade para entrar em contato conosco. Você pode nos enviar uma mensagem através do formulário abaixo ou enviar um e-mail diretamente para nossa equipe.
        </p>

        <div class="row row-cols-1 row-cols-md-2 mt-4 g-6">
            <div class="col mb-3">
                <h4 class="display-6 mb-3">Formulário de Contato</h4>
                <form method="post" asp-action="PostSendEmailToAdmin" asp-controller="Home">
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" id="InputName" placeholder="Nome Completo" name="contactName" required>
                        <label class="form-label" for="InputName">Nome Completo</label>
                        @if(nameFailures != null && nameFailures.Count() != 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show m-1" role="alert">
                                @foreach(var failure in nameFailures)
                                {
                                    <span>•</span> @failure
                                    <br>
                                }
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                            </div>
                        }
                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" id="InputEmail" placeholder="Email" name="emailForContact" required>
                        <label class="form-label" for="InputEmail">Email</label>
                        @if(emailFailures != null && emailFailures.Count() != 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show m-1" role="alert">
                                @foreach(var failure in emailFailures)
                                {
                                    <span>•</span> @failure
                                    <br>
                                }
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                            </div>
                        }
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input class="form-control" type="text" id="InputSubject" placeholder="Assunto" name="messageSubject" required>
                        <label class="form-label" for="InputSubject">Assunto</label>
                        @if(subjectFailures != null && subjectFailures.Count() != 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show m-1" role="alert">
                                @foreach(var failure in subjectFailures)
                                {
                                    <span>•</span> @failure
                                    <br>
                                }
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                            </div>
                        }
                    </div>

                    <div class="form-floating mb-3">
                        <textarea class="form-control" id="TextAreaMessage" rows="3" placeholder="Mensagem" name="messageBody" required></textarea>
                        <label class="form-label" for="TextAreaMessage">Mensagem</label>
                        @if(messageFailures != null && messageFailures.Count() != 0)
                        {
                            <div class="alert alert-danger alert-dismissible fade show m-1" role="alert">
                                @foreach(var failure in messageFailures)
                                {
                                    <span>•</span> @failure
                                    <br>
                                }
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-medtagger-primary">Enviar</button>
                        <button type="reset" class="btn btn-medtagger-warning">Apagar</button>
                    </div>

                </form>
            </div>

            <div class="col mb-3">
                <h4 class="display-6 mb-3">E-mail</h4>
                <p class="lead">Prefere enviar um e-mail? Sem problemas! Você pode nos contatar pelo endereço:</p>
                <p class="lead"><strong>medtagger.contato@gmail.com</strong></p>
            </div>

        </div>

    </div>
    
</div>
